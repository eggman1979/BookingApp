<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:divider="?android:dividerVertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="dk.kdr.bookingapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vaskebooking"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Indtast dine bruger oplysninger"
            android:textColor="#656565"
            android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/bruger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#323232"
        android:gravity="center_horizontal"
        android:hint="bruger ID"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/selskab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#323232"
        android:gravity="center_horizontal"
        android:hint="forening"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#323232"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="30dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log ind" />
</LinearLayout>


